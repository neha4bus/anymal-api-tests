  <buildtool_depend>catkin</buildtool_depend>

  <build_depend>cmake_clang_tools</build_depend>

  <depend>actionlib_tutorials</depend>
  <depend>param_io</depend>
  <depend>roscpp</depend>
  <depend>state_machine</depend>
  <depend>state_machine_ros</depend>

