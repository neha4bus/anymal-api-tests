  <description>Examples to showcase how to use the state machine library and write plugins.</description>

  <license>Proprietary</license>
  <maintainer email="rdiethelm@anybotics.com">Remo Diethelm</maintainer>
  <maintainer email="escioni@anybotics.com">Enea Scioni</maintainer>
